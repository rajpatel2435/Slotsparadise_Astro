---
const { node } = Astro.props;
import SidebarArticles from "../SidebarArticles.astro";
import { generateBreadcrumbs } from "../../scripts/utils";
//console.log("text 2" + node.content);
//console.log(node.uri);

const breadcrumb = generateBreadcrumbs(node.uri);
//console.log(breadcrumb);
---

<div
  class="header-background bg-[url('https://slotsparadise.com/wp-content/uploads/2022/08/casino-guides-header-v23.jpg')] bg-cover bg-center h-52 flex items-center text-white font-giloryRegular"
>
  <div class="header-content-row w-[80%] mx-auto">
    <div class="page-title">
      <h1 class="entry-title text-2xl md:text-3xl font-giloryExtrabold mb-2">
        {node.title}
      </h1>

      <div class="post-bread font-semibold">
        <div class="capitalize" set:html={breadcrumb} />
        <div
          class="font-semibold text-[#ff688b] text-[18px] mt-4"
          id="edit-post-link"
          data-astro-node-id={node.id}
        >
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Main Page -->

<div class="post-content-row max-w-[1440px] mx-auto mt-16 mb-10 px-10 xl:px-2">
  <div class="casino_news_blocks grid grid-cols-6 gap-12">
    <div class="post-content-module col-span-6 lg:col-span-4 mx-auto lg:mx-0">
      <div class="pb-10">
        <img
          class="featured-image rounded-lg overflow-hidden"
          width="1200"
          height="667"
          src={node.featuredImage?.node?.sourceUrl}
          alt={node.title}
          title={node.title}
        />
      </div>
      <article
        class="font-giloryRegular font-semibold single-news-content-article single_article"
        set:html={node.content}
      />
    </div>
    <div class="sidebar col-span-6 lg:col-span-2 flex flex-col gap-4 px-2">
      <h3 class="text-[#ff688b] pb-3 font-medium font-giloryExtrabold text-3xl">
        Articles
      </h3>
      <SidebarArticles />
    </div>
  </div>
</div>

<style is:global>
  .wp-block-image img {
    width: 100%;
    height: auto;
    margin-bottom: 20px;
  }

  h2.wp-block-heading,
  h3.wp-block-heading {
    font-size: 26px;
    color: #ff688b;
    font-weight: 900;
    font-family: "Gilroy-ExtraBold";
    padding-bottom: 10px;
    margin-top: 15px;
  }

  h3.wp-block-heading {
    font-size: 24px;
    margin-top: 15px;
  }

  h4.wp-block-heading {
    font-size: 22px;
    margin-top: 15px;
  }

  .post-content-module p {
    padding-bottom: 16px;
  }

  .related_topics ul {
    padding: 5px !important;
    padding-left: 25px !important;
    font-size: 18px !important;
  }

  .post-content-module .related_topics li {
    list-style-type: disc;
    margin-left: 20px;
  }
</style>

<script is:inline>
  function getLoggedInCookie(postID) {
    postID = postID.replace(/^post:/, "");
    const cookie = document.cookie.indexOf("wp-settings-time") !== -1;
    let anchor = "";
    if (cookie) {
      anchor = `<a href="https://slotsparadise.com/wp-admin/post.php?post=${postID}&action=edit">Edit post</a>`;
    }
    return anchor;
  }
  document.addEventListener("DOMContentLoaded", function (event) {
    const editPostLink = getLoggedInCookie(
      atob(
        document
          .getElementById("edit-post-link")
          .getAttribute("data-astro-node-id"),
      ),
    );
    document.getElementById("edit-post-link").innerHTML = editPostLink;
    console.log("EDIT POST LINK", editPostLink);
  });
</script>
