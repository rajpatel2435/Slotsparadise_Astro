---
import { ADMIN_AJAX_ENDPOINT } from "../data/endpoints";
---

<div id="search-container" class="text-black"></div>

<script define:vars={{ ADMIN_AJAX_ENDPOINT }}>
    document.addEventListener("DOMContentLoaded", function () {
      const ajaxurl = ADMIN_AJAX_ENDPOINT;

      // Make the AJAX request
      fetch(ajaxurl, {
        method: "POST",
        headers: {
          "Content-Type": "application/x-www-form-urlencoded; charset=UTF-8",
        },
        body: "action=search_shortcode_html",
      })
        .then((response) => response.text())
        .then((data) => {
          // Update the content of the container with the sanitized result
          document.getElementById("search-container").innerHTML = data;
        })
        .catch((error) => {
          // Handle fetch errors
          console.error("Fetch error:", error);
        });
    });

</script>
