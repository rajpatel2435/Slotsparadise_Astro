---
import { wpquery } from '../../data/wordpress';
import { getCachedData, setCachedData } from '../../lib/cache.js';
import { Image } from "astro:assets";

const cacheKey = 'homePostsData'; //define cache key here
const cachedData = getCachedData(cacheKey); //retrive cached data


let data;
if (cachedData === undefined) {
data = await wpquery({
  query: `
  query HomePosts {
  posts(where: {in: [992, 1244, 1285, 1287, 1250, 1289, 1252, 2218]}) {
    edges {
      node {
        title
        slug
        featuredImage {
          node {
            altText
            title
            sourceUrl
          }
        }
        link
        uri
      }
    }
  }
}
  `,
});
setCachedData(cacheKey, data);
}else{
  data = cachedData;
  
}

---

<!-- Slider main container -->
<div class="swiper swiper1 py-20 mb-12 bg-[#eee]">
  <div class=" flex justify-between px-2 mb-4">
    <h3 class="text-[#ff688b] text-xl md:text-3xl font-bold font-giloryExtrabold">Game Reviews</h3>
    <h3><a href="/the-beach/games" class="text-base md:text-lg font-bold text-[#1c8fdf] font-giloryRegular">More Game Reviews</a></h3>
  </div>
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    {
      data.posts.edges.map((post: any) => (
    <!-- Slides -->
      <article class="home-slider-article swiper-slide rounded-[3px] bg-white shadow-homePosts overflow-hidden h-[283px]" role="article">
        <a href={`/the-beach${post.node.uri}`} class="entry-featured-image-url mb-5">
          <Image
            class="games-Image reco w-full h-[228px]"
            width="328"
            height="223"
            alt={post.node.title}
            title={post.node.title}
            src={post.node.featuredImage.node.sourceUrl}
          />
        </a>

        <div class="entry-title pl-5 h-[55px] leading-[55px]">
          <a class="text-[#2f0536] font-extrabold text-[18px] whitespace-nowrap font-gilorybold" href={`/the-beach${post.node.uri}`}>{post.node.title}</a>
        </div>
      </article>
      ))
  }

  </div>

  <!-- If we need navigation buttons -->
  <div class="swiper-button-prev"><img src="https://slotsparadise.com/wp-content/uploads/2022/12/sp-hover-arrow-left.svg" alt ="previous button" width="76" height="152" /></div>
  <div class="swiper-button-next"><img src="https://slotsparadise.com/wp-content/uploads/2022/12/sp-hover-arrow-right.svg" alt="next button" width="76" height="152" /></div>

</div>

<style>
  .swiper-button-next::after, .swiper-button-prev::after {
    content: "";
}
.swiper-button-prev{
    left: 0px;
    width: unset;
}
.swiper-button-next{
    right: 0px;
    width: unset;
}
</style>

<script src="../../scripts/local.js"></script>





